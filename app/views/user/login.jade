extends ../layout

block scripts
	link(rel='stylesheet', href='/stylesheets/login-page.css?fingerprint=' + fingerprint('/stylesheets/login-page.css'))

block content
	.content.content-alt
		.container
			.row
				.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
					if displayOrcidLogin
						include ../orcid/login
					else
						.card
							.page-header
								h1 #{translate("log_in")}
							form(async-form="login", name="loginForm", action='/login', method="POST", ng-cloak)
								input(name='_csrf', type='hidden', value=csrfToken)
								input(name='redir', type='hidden', value=redir)
								form-messages(for="loginForm")
								.form-group
									input.form-control(
										type='email',
										name='email',
										required,
										placeholder='email@example.com',
										ng-model="email",
										ng-model-options="{ updateOn: 'blur' }",
										focus="true",
										autocomplete="email"
									)
									span.small.text-primary(ng-show="loginForm.email.$invalid && loginForm.email.$dirty")
										| #{translate("must_be_email_address")}
								.form-group
									input.form-control(
										type='password',
										name='password',
										required,
										placeholder='********',
										ng-model="password",
										autocomplete="current-password"
									)
									span.small.text-primary(ng-show="loginForm.password.$invalid && loginForm.password.$dirty")
										| #{translate("required")}
								.actions
									button.btn-primary.btn(
										type='submit',
										ng-disabled="loginForm.inflight"
									)
										span(ng-show="!loginForm.inflight") #{translate("login")}
										span(ng-show="loginForm.inflight") #{translate("logging_in")}...
									a.pull-right(href='/user/password/reset') #{translate("forgot_your_password")}?


	.circle
		.cursor
			h2 Work better and faster
		#quarter1.quarter
			.title
				h2
					img(src='img/login-page/latex.svg', width='140px', alt='LaTeX')
					.subtitle Collaborative LaTeX solution
			.text
				p.
					Work with your co-authors using a single version of your paper.
					This solution uses ShareLaTeXÂ© technology.
		#quarter2.quarter
			.title
				h2
					img(src='img/login-page/stellar.svg', width='140px', alt='Stellar objects')
					.subtitle Easier links to stellar objects
			.text
				p.
					Get auto-completion for stellar objects and additional information
					using tools developed with the CDS
		#quarter3.quarter
			.title
				h2
					img(src='img/login-page/chat.svg', width='110px', alt='Chat')
					.subtitle Chat with your co-authors
			.text
				p Ask a question directly, chat and gain in efficiency
		#quarter4.quarter
			.title
				h2
					img(src='img/login-page/dropbox.svg', width='110px', alt='Dropbox')
					.subtitle Dropbox integration
			.text
				p Edit your article offline and automatically sync it with your online copy with Dropbox.

	script(type="text/javascript").
		var $ = angular.element;
		$(".quarter").bind('mouseenter', function() {
			$(".cursor h2").addClass($(this).attr('id'));
		}).bind('mouseleave', function() {
			$(".cursor h2").removeClass($(this).attr('id'));
		});
