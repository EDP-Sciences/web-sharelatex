script(type='text/ng-template', id='cdsObjectDisplayTemplate')
    .cdsDisplayObjectOverlay(
        class="dropdown"
        ng-controller="ObjectDisplayController"
        ng-style="{'left': left, 'top': top, 'bottom': bottom, 'right': right}"
        ng-class="{'open': open}"
        ng-show="object_data || error || pending"
    )
        .error(ng-show="error").
            There was an error finding the given object ({{ error }})

        .pending(ng-show="pending").
            Searching object...

        .content(ng-show="object_data")
            .name {{ object_data.name }}
            .found(ng-repeat="(key, value) in object_data", ng-class="key" ng-if="key != 'name'")
                .name {{ value.name }}
                .type(ng-if="value.type") {{ value.type }}
                .position(ng-if="value.position") {{ value.position }}
            .notfound(ng-if="object_data.notfound") Object not found at the CDS
